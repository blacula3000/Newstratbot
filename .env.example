# Bybit API Configuration
# Copy this file to .env and fill in your actual API credentials

# Bybit API Credentials
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Trading Configuration
BYBIT_TESTNET=true  # Set to false for live trading (be very careful!)
TRADING_MODE=paper  # paper, testnet, or live
DEFAULT_POSITION_SIZE=0.01  # Default position size in base currency
MAX_RISK_PER_TRADE=0.02  # Maximum 2% risk per trade
MAX_CONCURRENT_POSITIONS=5  # Maximum number of open positions

# Risk Management
STOP_LOSS_PERCENTAGE=2.0  # Default stop loss percentage
TAKE_PROFIT_RATIO=2.0  # Risk-reward ratio (2:1)
DAILY_LOSS_LIMIT=100  # Maximum daily loss in USD
ACCOUNT_BALANCE_THRESHOLD=1000  # Minimum account balance required

# Alert Settings
DISCORD_WEBHOOK_URL=  # Optional: Discord notifications
TELEGRAM_BOT_TOKEN=  # Optional: Telegram notifications
TELEGRAM_CHAT_ID=  # Optional: Telegram chat ID

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true
LOG_TRADES=true